<div class="CoverToTop"
  style="
    background: red;
    position: fixed;
    width: 100%;
    height: 300px;
    top: 0px;
    left: 0px;
    z-index: 99;
  "
></div>

<div class="h-screen w-screen max-h-screen 2xl:bg-gray-800 dark:bg-gray-800">
  <div class="2xl:container 2xl:mx-auto">
    <div class="ui two columns grid stackable centered h-screen max-h-screen en-no-spaces">
      <div class="column bg-white dark:bg-gray-800">
        <div class="CenterBlockAbsolute w-full px-7 sm:px-14 md:px-0 lg:px-20">

          <img src="https://cdn-icons-png.flaticon.com/512/178/178158.png"
                        class="en-no-spaces h-32 rounded-full !table !mx-auto drop-shadow-xl">

          <br />

          <h1 class="
            dark:text-gray-300 text-tighter font-bold md:text-lg
            mt-12 text-center en-no-spaces
          ">
            Informe suas credenciais para acessar.
          </h1>

          <div class="en-divider-h my-5 CoverToTopStart"></div>

          <form action="#" method="POST">

            <%= render partial: '/layouts/components/input_icon', locals: {
              label: 'E-mail:',
              icon: 'envelope',
              focus: true,
              type: 'email'
            } %>

            <br/>

            <%= render partial: '/layouts/components/input_icon', locals: {
              label: 'Senha:',
              icon: 'key',
              type: 'password',
              placeholder: '***'
            } %>

            <div class="text-right mt-2">
              <a href="#"
                  class="dark:text-gray-500 text-sm font-semibold text-gray-700 hover:text-blue-700 focus:text-blue-700">
                Esqueceu sua senha?
              </a>
            </div>

            <button
                type="submit"
                class="
                _ease-in _duration-300
                _border-b-4 _border-indigo-600
                w-full block bg-indigo-500 text-white
                rounded-lg px-4 py-3 mt-6
                font-semibold md:font-normal
                hover:bg-indigo-400
                hover:border-indigo-500
                focus:bg-indigo-400">
              Acessar
            </button>

          </form>

          <br/>
          <div class="en-divider-h"></div>

          <p class="dark:text-gray-300 mt-8 text-semibold">
            Não possui acesso?
            <a href="#" class="text-blue-500 hover:text-blue-700">
              Crie uma conta.
            </a>
          </p>

          <br/>
          <br/>
          <%# <div class="dark:bg-gray-700 h-px w-1/5 bg-gray-200"></div> %>
          <br/>

          <div class="dark:text-gray-400 text-xs text-gray-400 font-medium tracking-tight">
            © Encoded with
            <span class="dark:text-gray-300 text-gray-700 font-semibold">
              Encoder
            </span>
            by
            <a href="https://www.linkedin.com/in/lucianrr/" target="_blank" class="text-blue-400">
              Lucian Rossoni Ribas
            </a>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
